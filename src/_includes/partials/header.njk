<header class="site-header">
  <div class="header-container">
    <a href="/" class="site-logo">
      <img src="/assets/images/branding/kappa-crest.png" alt="Kappa Alpha Psi Coat of Arms" width="50" height="50">
      <span class="site-logo-text">Boston (MA) Alumni Chapter<br>Kappa Alpha Psi</span>
    </a>

    <button class="menu-toggle" aria-label="Toggle navigation" aria-expanded="false">
      â˜°
    </button>

    <nav class="main-nav" aria-label="Main navigation">
      <ul>
        {% for item in navigation.mainNav %}
        <li class="nav-item">
          <a href="{{ item.url }}" class="nav-link">{{ item.label }}</a>
          {% if item.children %}
          <ul class="nav-dropdown">
            {% for child in item.children %}
            <li>
              <a href="{{ child.url }}"{% if child.external %} target="_blank" rel="noopener noreferrer" class="external-link"{% endif %}>
                {{ child.label }}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>
